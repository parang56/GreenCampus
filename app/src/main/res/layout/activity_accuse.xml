<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EEF0EF"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AccuseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/accuse_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="#EEF0EF"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/back" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/makeQuestionBack"
            android:text="신고하기"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
    </LinearLayout>

    <TextView
        android:id="@+id/accuse_writerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성자 : "
        android:layout_marginStart="14dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/accuse_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과목명 : "
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/accuse_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목 : "
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#000000"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#EEF0EF"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="35dp"
        android:layout_height="40dp">
        <CheckBox
            android:id="@+id/accuse_check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스팸홍보/도배글입니다."
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#EEF0EF"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <CheckBox
            android:id="@+id/accuse_check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="불법정보를 포함하고 있습니다."
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#EEF0EF"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <CheckBox
            android:id="@+id/accuse_check3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="욕설/생명경시/혐오/차별적 표현입니다."
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#EEF0EF"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <CheckBox
            android:id="@+id/accuse_check4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 노출 게시물입니다."
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#EEF0EF"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <CheckBox
            android:id="@+id/accuse_check5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="불쾌한 표현이 있습니다."
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#EEF0EF"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <CheckBox
            android:id="@+id/accuse_check6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="명예훼손 또는 저작권이 침해되었습니다."
            />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/accuse_finishBtn"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#D3EBC0"
        android:text="신고하기"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="25dp"
        />

</LinearLayout>