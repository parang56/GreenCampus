<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/image"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_toLeftOf="@+id/image"
        android:ellipsize="end"
        android:maxLines="2" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/heart_empty"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/heart_empty" />

    <TextView
        android:id="@+id/heartCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/heart_empty"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/heart_empty" />

    <ImageView
        android:id="@+id/answer"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/heart_empty"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/heartCnt"
        android:scaleType="centerInside"
        android:src="@drawable/answer" />

    <TextView
        android:id="@+id/answerCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/answer"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/answer" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="#000000" />

</RelativeLayout>